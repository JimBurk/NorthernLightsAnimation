<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.orangecoastcollege.cs273.jburk.northernlightsanimation.MainActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <ImageView
        android:id="@+id/lightsImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.75"
        app:srcCompat="@drawable/ic_northern_lights"
        tools:layout_editor_absoluteX="175dp"
        tools:layout_editor_absoluteY="78dp"/>

    <Button
        android:id="@+id/button"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="@string/frame_anim_button_text"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="184dp"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="@string/rotate_anim_button_text"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="261dp"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="@string/shake_anim_button_text"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="331dp"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="@string/custom_anim_button_text"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="408dp"/>
</LinearLayout>
